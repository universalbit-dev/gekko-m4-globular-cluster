# Logging Environment: "standalone" or "child-process"
GEKKO_ENV=standalone

# Enable or disable debug logging: "true" or "false"
DEBUG=false

# Mute all logging output: "true" or "false"
SILENT=false

# Optional: Set log output file path (if you further enhance to support file logging)
LOG_FILE_PATH=./logs/gekko.log

# Optional: Set log level (if you add more levels like trace, fatal, etc.)
LOG_LEVEL=info

# Optional: Log batch size (number of messages before flushing)
LOG_BATCH_SIZE=10

# Optional: Log flush interval (milliseconds)
LOG_FLUSH_INTERVAL=1000

# Optional: Hostname for metadata
# HOSTNAME=myhost

# Optional: Process ID (can be set automatically, but here for completeness)
# PROCESS_ID=12345

# Optional: Enable structured (JSON) logging
LOG_JSON=true
